{

  "description": "Nucypher Character Control add-on",
  "manifest_version": 2,
  "name": "Nucypher",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "nucypher@nucypher.com",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sources/jquery.js", "content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/message.svg"
  },

  "permissions": [
    "tabs",
    "nativeMessaging",
    "*://*/*",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "web_accessible_resources": ["images/bowser.png", "images/coin.gif", "images/box.png"]

}
